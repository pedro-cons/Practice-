

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@TempData["Titulo"] - @Dominio.Helpers.Configuracao.Aplicacao</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Uma aplicação com objetivo de evoluir o seu negócio" name="description" />
    <meta content="@Dominio.Helpers.Configuracao.Aplicacao" name="author" />

    <!-- Icone -->
    <link rel="shortcut icon" href="~/favicon.ico">

    <!-- Configuracao do Tema -->
    <script src="~/assets/js/hyper-config.js"></script>

    <!-- CSS Icones -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />

    <!-- CSS DataTable -->
    <link href="~/assets/vendor/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/vendor/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css" />

    <!-- CSS Select2 -->
    <link href="~/assets/vendor/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- CSS do App -->
    <link href="~/assets/css/app-modern.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- CSS Personalizado -->
    <link href="~/assets/css/personalizado.css" rel="stylesheet" type="text/css" />

</head>
<body class="show">
    @{
        if (Dominio.Helpers.Sessao.Usuario == null)
        {
            Dominio.Helpers.Sessao.Redireciona("/Login");
            TempData["Erro"] = "Para acessar essa tela você precisa entrar no sistema.";
            @RenderBody()
        }
        else
        {
            <div class="wrapper">
                <!-- ========== Topbar Start ========== -->
            @await Html.PartialAsync("~/Views/Shared/LayoutInicio/_TopBar.cshtml")
                <!-- ========== Topbar End ========== -->
                <!-- ========== Left Sidebar Start ========== -->
            @await Html.PartialAsync("~/Views/Shared/LayoutInicio/_LeftSideBar.cshtml")
                <!-- ========== Left Sidebar End ========== -->
            @await Html.PartialAsync("~/Views/Shared/Components/_Alertas.cshtml")

                <!-- ============================================================== -->
                <!-- Start Page Content here -->
                <!-- ============================================================== -->
                <div class="content-page">
                    <div class="content">
                        <div class="container-fluid">
                            @RenderBody()
                        </div>
                    </div>
                    <!-- Footer Start -->
                    @await Html.PartialAsync("~/Views/Shared/LayoutInicio/_Footer.cshtml")
                    <!-- end Footer -->
                </div>
                <!-- ============================================================== -->
                <!-- End Page content -->
                <!-- ============================================================== -->
            </div>

            <!-- JS Jquery -->
            <script src="~/assets/vendor/jquery/jquery.min.js"></script>

            <!-- JS Vendor -->
            <script src="~/assets/js/vendor.min.js"></script>

            <!-- JS Máscaras -->
            <script src="~/assets/vendor/jquery-mask-plugin/jquery.mask.min.js"></script>

            <!-- JS Date -->
            <script src="~/assets/vendor/daterangepicker/moment.min.js"></script>
            <script src="~/assets/vendor/daterangepicker/daterangepicker.js"></script>

            <!-- JS Apex Chart -->
            <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>

            <!-- JS Vector Map -->
            <script src="~/assets/vendor/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.min.js"></script>
            <script src="~/assets/vendor/admin-resources/jquery.vectormap/maps/jquery-jvectormap-world-mill-en.js"></script>

            <!-- JS Datatables -->
            <script src="~/assets/vendor/datatables.net/js/jquery.dataTables.min.js"></script>
            <script src="~/assets/vendor/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
            <script src="~/assets/vendor/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
            <script src="~/assets/vendor/datatables.net-responsive-bs5/js/responsive.bootstrap5.min.js"></script>

            <!-- JS Datatable Init -->
            <script src="~/assets/js/pages/demo.datatable-init.js"></script>

            <!-- JS DropZone -->
            <script src="~/assets/vendor/dropzone/min/dropzone.min.js"></script>
            <script src="~/assets/js/ui/component.fileupload.js"></script>

            <!--  JS Select2 -->
            <script src="~/assets/vendor/select2/js/select2.min.js"></script>

            <!-- JS do App -->
            <script src="~/assets/js/app.min.js"></script>

            <!-- JS dos Alertas -->
            <script src="~/assets/js/alertas.js"></script>

            @RenderSection("scripts", required: false)
        }
    }
</body>
</html>
