@using Dominio.Enumeradores
@using Dominio.Helpers

@{
    var lojas = ViewBag.Loja as List<Dominio.ViewModels.LojaViewModel>;
}

<table id="basic-datatable" class="table table-striped table-centered dt-responsive nowrap w-100">
    <thead class="table-light">
        <tr>
            <th class="text-center">Loja</th>
            <th class="text-center">Email</th>
            <th class="text-center">CNPJ / CPF</th>
            <th class="text-center">Whatsapp</th>
            <th class="text-center">Cidade</th>
            <th class="text-center">Estado</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in lojas)
        {
            <tr>
                <td class="table-user text-center">
                    <img src="data:image/jpg;base64,@Convert.ToBase64String(item.LJA_BIN_FOTO)" alt="logo" class="me-2 rounded-circle">
                    <a class="text-body fw-semibold">@item.LJA_STR_NOME</a>
                </td>
                <td class="text-center">@item.LJA_STR_EMAIL</td>
                <td class="text-center">@item.LJA_STR_CNPJ_CPF</td>
                <td class="text-center">@item.LJA_STR_WHATSAPP</td>
                <td class="text-center">@item.Endereco.END_STR_CIDADE</td>
                <td class="text-center">@ExtensaoEnumerador.GetDisplayName((EEstado)item.Endereco.END_STR_ESTADO)</td>
                <td class="table-action text-center">
                    <a href="/Loja/Editar/@item.LJA_INT_IDF" class="action-icon" data-bs-trigger="hover" data-bs-placement="top" data-bs-toggle="popover" data-bs-content="Editar"> <i class="mdi mdi-pencil"></i></a>
                    <a onclick="abreModal('@item.LJA_INT_IDF')" class="action-icon" data-bs-trigger="hover" data-bs-placement="top" data-bs-toggle="popover" data-bs-content="Excluir"> <i class="mdi mdi-delete"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
